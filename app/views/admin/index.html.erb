<h1 class="page-header">Установка форсированного курса</h1>

<%= form_for(@override, url: admin_path, method: :post, html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <%= f.label :value, 'Значение курса рубля', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :value, class: 'form-control', placeholder: 'В данный момент не задано', step: '0.01', required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active_until, 'Время, до которого значение актуально', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">

      <div style="overflow:hidden;">
        <div class="row">
          <div class="col-md-8">
            <div id="js-override-datetimepicker">
              <%= f.text_field :active_until, type: 'hidden', class: 'form-control', id: 'datepicker-data' %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Форсировать', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
